{
  "manifest_version": 2,
  "name": "Color Friendly",
  "description": "Change the color of page elements",
  "version": "1.0",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
      "default_title": "Set this page's color.",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
	"content_scripts": [{
			"matches": ["http://*/*","https://*/*"],
			"js": ["changer.js"]
	}]
}
